@import mixins

body.toleft #wrapper { right: 0 }
body.toright #wrapper { left: 0 }

#wrapper
  position relative
  z-index 10
  top 0
  transition(all, 0.25s)


nav.slideout-nav
  position fixed
  top 0
  z-index 300
  width 320px
  height 100%
  padding 30px
  transition(all, 0.25s)
  a.close
    position absolute
    top 15px
    right 15px
    font-size 32px
    color red
    text-decoration none
  p, li, a
    font-size 1.8em
    color $white
    p, li, a { font-size: 1em }

body.toright
  nav.slideout-nav
    right -390px

body.toleft
  nav.slideout-nav
    left -390px

body.slide
  nav.slideout-nav
    background-color rgba(#7f7fff, 0.9)
  &.navigation-open
    &.toleft nav.slideout-nav { left: 0 }
    &.toright nav.slideout-nav { right: 0 }

body.push
  nav.slideout-nav
    background-color #7f7fff
  &.navigation-open
    &.toleft
      #wrapper { right: -300px; }
      nav.slideout-nav { left: 0 }
    &.toright
      #wrapper { left: -300px; }
      nav.slideout-nav { right: 0 }


/*===================*\
     OPEN MENU LINK
\*===================*/
a.open-menu
  position absolute
  top 15px
  right 0
  display block
  square(32px)
  &:hover hr:nth-child(odd) { margin-left: -5px }
  hr
    width 100%
    height 3px
    margin 5px 0
    color $black
    border 0
    background-color $black
    transition(all, 0.15s)